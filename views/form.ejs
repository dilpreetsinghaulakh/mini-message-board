<html>
  <body
    style="
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 1rem;
      display: flex;
      flex-direction: column;
      align-items: center;
    "
  >
    <form
      method="POST"
      action="/new"
      style="
        display: flex;
        flex-direction: column;
        width: 100%;
        max-width: 40rem;
      "
    >
      <h1>Add a new message</h1>

      <input
        type="text"
        name="messageUser"
        placeholder="Username"
        style="
          padding: 0.5rem 1rem;
          font-size: 1rem;
          border: #dadada 1px solid;
          background-color: #fafafa;
          border-radius: 0.25rem;
        "
      />
      <br />

      <textarea
        name="messageText"
        rows="5"
        placeholder="Your message"
        style="
          padding: 0.5rem 1rem;
          font-size: 1rem;
          font-family: inherit;
          border: #dadada 1px solid;
          background-color: #fafafa;
          border-radius: 0.25rem;
        "
      ></textarea>
      <br />
      <button
        type="submit"
        value="Send Message"
        style="
          background-color: black;
          color: white;
          text-decoration: none;
          padding: 0.5em 1em;
          border-radius: 0.25em;
          font-size: 1rem;
          border: none;
          outline: none;
          cursor: pointer;
        "
      >
        Send Message
      </button>
    </form>
  </body>
</html>
