<html>
  <body
    style="
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 1rem;
      display: flex;
      flex-direction: column;
      align-items: center;
    "
  >
    <h1 style="text-align: center">Mini Message Board</h1>
    <div
      style="
        display: flex;
        flex-direction: column;
        gap: 1rem;
        width: 100%;
        max-width: 40rem;
      "
    >
      <% messages.map((message)=> { %> <%- include('message', { message }) %> <%
      }) %>
    </div>

    <a
      href="/new"
      style="
        background-color: black;
        color: white;
        text-decoration: none;
        padding: 0.5em 1em;
        margin: 2rem 0;
        border-radius: 0.25em;
      "
      >Add Message</a
    >
  </body>
</html>
